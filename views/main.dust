<body class="no-js">
  <script>
    document.body.classList.remove('no-js');
    document.body.classList.add('js');
  </script>

  <svg class="bg" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 9 9" preserveAspectRatio="none">
    <defs>
      <linearGradient id="bg-grad" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop id="bg-grad-top" offset="0%" stop-color="#000000" stop-opacity="1.0"></stop>
        <stop id="bg-grad-bot" offset="100%" stop-color="#000000" stop-opacity="1.0"></stop>
      </linearGradient>
    </defs>
    <rect id="bg-rect" x="0" y="0" width="9" height="9" fill="url(#bg-grad)"></rect>
  </svg>

  <svg class="starfield" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 400 300" preserveAspectRatio="xMidYMid slice">
    <defs>
      <radialGradient id="starGradient" fx="50%" fy="50%" cx="50%" cy="50%" r="50%">
        <stop id="star-grad-1" offset="0%" stop-color="#ffffff" stop-opacity="1" />
        <stop id="star-grad-2" offset="30%" stop-color="#eeeeee" stop-opacity="0.9" />
        <stop id="star-grad-3" offset="50%" stop-color="#cccccc" stop-opacity="0.6" />
        <stop id="star-grad-4" offset="100%" stop-color="#888888" stop-opacity="0" />
      </radialGradient>
      <circle id="star" cx="200" cy="135" r="4" fill="url(#starGradient)" />
    </defs>
  </svg>

  <div class="container">
    <div id="slide-1" class="slide" data-slide="1">
      <p>{slide1Content|s}</p>
    </div>

    <div id="slide-2" class="slide" data-slide="2">
      <p>{slide2Content|s}</p>
    </div>

    <div id="slide-3" class="slide" data-slide="3">
      <p>{slide3Content|s}</p>
    </div>

    <div id="slide-4" class="slide" data-slide="4">
      <p>{slide4Content|s}</p>
    </div>

    <div id="slide-5" class="slide" data-slide="5">
      <p>{slide5Content|s}</p>
    </div>

    <div id="slide-6" class="slide" data-slide="6">
      <p>{slide6Content|s}</p>
    </div>

    <div id="slide-7" class="slide" data-slide="7">
      <p>{slide7Content|s}</p>
    </div>
  </div>

