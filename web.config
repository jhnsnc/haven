<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode"/>
    </handlers>

    <iisnode
      nodeProcessCountPerApplication="1"
      maxConcurrentRequestsPerProcess="512"
      watchedFiles="*.js"
      loggingEnabled="true"
     />
  </system.webServer>
</configuration>
